# Frontend SPA Routing - .htaccess for Hostinger
# Ye file public_html folder mein honi chahiye

RewriteEngine On
RewriteBase /

# Set proper MIME types for static assets FIRST (before any rewrites)
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
    AddType application/json .json
    AddType image/svg+xml .svg
    AddType image/x-icon .ico
    AddType image/webp .webp
    AddType text/xml .xml
</IfModule>

# Allow direct access to static assets (CSS, JS, images, fonts, etc.)
# These should be served directly without rewriting
RewriteCond %{REQUEST_URI} \.(css|js|json|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|ttf|eot|xml|txt|webmanifest)$ [NC]
RewriteRule . - [L]

# Allow direct access to sitemap.xml and robots.txt
RewriteCond %{REQUEST_URI} ^/(sitemap\.xml|robots\.txt)$ [NC]
RewriteRule . - [L]

# Allow direct access to assets directory
RewriteCond %{REQUEST_URI} ^/assets/ [NC]
RewriteRule . - [L]

# Handle Angular/React Router - All routes to index.html
# Agar file ya directory exist nahi karti, to index.html serve karo
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule . /index.html [L]

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    # Set proper content type for XML files
    <FilesMatch "\.xml$">
        Header set Content-Type "text/xml; charset=utf-8"
    </FilesMatch>
    # Set proper content type for CSS files
    <FilesMatch "\.css$">
        Header set Content-Type "text/css; charset=utf-8"
    </FilesMatch>
    # Set proper content type for JS files
    <FilesMatch "\.js$">
        Header set Content-Type "application/javascript; charset=utf-8"
    </FilesMatch>
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

